{
	"compilerOptions": {
		"baseUrl": "src",
		"typeRoots": ["node_modules/@types"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es6", "es7"],
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"pretty": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src",
		"node_modules/jasmine-expect/jasmine-matchers.d.ts"
	]
}