{
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "pretty": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/tsc"
  },
  "exclude": ["node_modules", "build"]
}
