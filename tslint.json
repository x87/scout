{
  "extends": "tslint:recommended",
  "rules": {
    "array-type": [true, "array-simple"],
    "object-literal-sort-keys": false,
    "indent": [true, "spaces"],
    "quotemark": [true, "single"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "ordered-imports": false,
    "arrow-parens": false,
    "member-access": [true, "no-public"],
    "curly": [true, "ignore-same-line"],
    "no-redundant-jsdoc": true,
    "no-bitwise": false,
    "no-console": false,
    "no-var-requires": false,
    "typedef": [true, "parameter", "call-signature"]
  },
  "linterOptions": {
    "exclude": ["**/samples/*"]
  }
}
